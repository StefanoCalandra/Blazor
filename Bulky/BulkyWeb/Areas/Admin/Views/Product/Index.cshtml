@model ProductListVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row g-3 align-items-end pb-3" id="filterForm">
            <div class="col-12 col-md-3">
                <label asp-for="SearchTerm" class="form-label"></label>
                <input asp-for="SearchTerm" class="form-control" placeholder="Title, author or ISBN" />
            </div>
            <div class="col-12 col-md-3">
                <label asp-for="SelectedCategoryId" class="form-label"></label>
                <select asp-for="SelectedCategoryId" asp-items="Model.CategoryList" class="form-select">
                    <option value="">All categories</option>
                </select>
            </div>
            <div class="col-6 col-md-2">
                <label asp-for="MinPrice" class="form-label"></label>
                <input asp-for="MinPrice" class="form-control" type="number" min="0" step="0.01" />
            </div>
            <div class="col-6 col-md-2">
                <label asp-for="MaxPrice" class="form-label"></label>
                <input asp-for="MaxPrice" class="form-control" type="number" min="0" step="0.01" />
            </div>
            <div class="col-12 col-md-2 text-md-end d-flex gap-2 justify-content-end">
                <button type="button" id="applyFilters" class="btn btn-outline-primary">
                    <i class="bi bi-funnel"></i> Filter
                </button>
                <button type="button" id="resetFilters" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-counterclockwise"></i>
                </button>
            </div>
        </div>

        <div class="row pb-3">
            <div class="col-12 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Product
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Price 50+</th>
                    <th>Price 100+</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
        </table>

    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}
